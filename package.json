{
  "name": "fiko",
  "version_TLDR": "AUTO STYLE SEMANTIC HTML | BASE CLASSLESS CSS TEMPLATE",
  "version_name": "🐸",
  "version": "0.2.6",
  "author": "Rokma",
  "contributors": "Toybreaker",
  "main": "css/fiko.min.css",
  "homepage": "https://fiko.rokma.rocks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/toybreaker/fiko.git"
  },
  "publishConfig": {
    "tag": "latest"
  },
  "keywords": [
    "css",
    "css-framework",
    "dark-mode",
    "dark-theme",
    "lightweight",
    "minimal",
    "native-html",
    "semantic"
  ],
  "scripts": {
    "B": "run-s build",
    "build": "run-s start lint \"build:*\" done --silent",
    "build0": "sass --style expanded --no-source-map scss/:css/",
    "dev": "nodemon -q --watch scss/ --ext scss --exec 'run-s build'",
    "lint": "run-s \"lint:*\" --silent",
    "lint:prettier": "prettier --write --loglevel silent 'scss/**/*.scss'",
    "lint:sort-scss": "postcss --config scss ./scss/**/*.scss --replace",
    "build:css": "sass --load-path=node_modules/@picocss/colors/scss --style expanded --source-map --embed-sources --no-error-css scss/:css/",
    "build:autoprefix": "postcss --config css --replace css/*.css !css/*.min.css",
    "build:minify": "cleancss -O1 --with-rebase --batch --batch-suffix .min css/*.css !css/*.min.css",
    "prelint": "echo '[fiko] 🐸 Lint'",
    "prebuild:css": "echo '[fiko] 🐸 Compile'",
    "prebuild:autoprefix": "echo '[fiko] 🐸 Autoprefix'",
    "prebuild:minify": "echo '[fiko] 🐸 Minify'",
    "start": "echo '\\033[96m[fiko] 🐸 Start\\033[0m'",
    "done": "echo '\\033[32m[fiko] 🐸 Done\\033[0m'"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "caniuse-lite": "1.0.30001481",
    "clean-css-cli": "^5.6.2",
    "css-declaration-sorter": "^6.4.1",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.30",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.8",
    "prettier": "^2.8.8",
    "sass": "^1.68.0"
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "not ie > 0"
  ]
}
